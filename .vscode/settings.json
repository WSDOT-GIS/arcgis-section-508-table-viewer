// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/*.css": { "when": "$(basename).less" },
        "**/*.css.map": { "when": "$(basename).less" },
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },
    "tslint.enable": true,
    "tslint.ignoreDefinitionFiles": false,
    "tslint.run": "onType",
    "tslint.validateWithDefaultConfig": true
}