{
    "include": [
        "src/index.ts"
    ],
    "compilerOptions": {
        "module": "umd",
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "mapRoot": "script",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "script",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
